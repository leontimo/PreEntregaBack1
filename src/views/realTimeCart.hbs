<h1>Carrito</h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col"> Titulo </th>
      <th scope="col"> Descripcion </th>
      <th scope="col"> Categoria </th>
      <th scope="col"> Precio </th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
      <tr>
        <td> {{this.title}}</td>
        <td> {{this.description}}</td>
        <td> {{this.category}} </td>
        <td> {{this.price}}</td>
        <td> <button style="color: white; display: flex; justify-content: center; align-items: center; margin: 0; border: none; border-radius: 2px; background-color: #a01717; text-decoration: none; font-size: 16px; padding: 5px 10px; box-shadow: 0px 1px 5px -2px black; cursor: pointer;">Eliminar</button> </td>
      </tr>
    {{/each}}
  </tbody>
  {{#if products.isEmpty}}
    <tfoot>
      <tr>
        <td colspan="4">No hay productos para mostrar</td>
      </tr>
    </tfoot>
  {{/if}}
</table>